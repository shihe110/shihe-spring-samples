<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--无参构造注入-->
    <bean id="user1" class="org.shihe.pojo.User">
    </bean>

    <!--有参构造注入-->
    <bean id="user2" class="org.shihe.pojo.User">
        <constructor-arg name="username" value="张三"></constructor-arg>
        <constructor-arg name="age" value="12"></constructor-arg>
    </bean>

    <!--无参构造 set注入-->
    <bean id="user3" class="org.shihe.pojo.User">
        <property name="username" value="李四"></property>
        <property name="age" value="23"></property>
        <property name="sex" value="true"></property>
    </bean>

    <!--静态工厂注入-->
    <bean class="org.shihe.pojo.FactoryDog" factory-method="getInstence" id="dog"></bean>

    <!--实例工厂注入-->
    <bean id="factoryDog" class="org.shihe.pojo.FactoryDog" ></bean>
    <bean id="dog2" factory-bean="factoryDog" factory-method="getInstence2"></bean>

</beans>